@model NTierApp.WebApp.Models.HomeViewModel



<div class="row">
    <div class="col-xs-12 col-md-6 col-lg-3">
        <div class="widget widget-tile">
            <div id="spark1" class="chart sparkline"></div>
            <div class="data-info">
                <div class="desc">Total Product Value</div>
                <div class="value">
                    <span data-toggle="counter" data-end="@Model.TotalProductValues" class="number">500</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-3">
        <div class="widget widget-tile">
            <div id="spark2" class="chart sparkline"></div>
            <div class="data-info">
                <div class="desc">Total Products</div>
                <div class="value">
                    </span><span data-toggle="counter" data-end="@Model.TotalProducts" class="number">0</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-3">
        <div class="widget widget-tile">
            <div id="spark3" class="chart sparkline"></div>
            <div class="data-info">
                <div class="desc">Number of Suppliers</div>
                <div class="value">
                    <span data-toggle="counter" data-end="@Model.TotalSuppliers" class="number">0</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-3">
        <div class="widget widget-tile">
            <div id="spark4" class="chart sparkline"></div>
            <div class="data-info">
                <div class="desc">Total Order Numbers</div>
                <div class="value">
                    <span data-toggle="counter" data-end="@Model.TotalOrders" class="number">0</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default panel-table">
            <div class="panel-heading">

                <div class="title">Latest Sales</div>
            </div>
            <div class="panel-body table-responsive">
                <table class="table table-striped table-borderless">
                    <thead>
                        <tr>
                            <th style="width:30%;">Product</th>
                            <th class="number" style="width:20%;">Price</th>
                            <th style="width:25%;">Date</th>
                            <th style="width:20%;">Category</th>
                            <th style="width:5%;" class="actions"></th>
                        </tr>
                    </thead>
                    <tbody class="no-border-x">

                        @foreach (var item in Model.Orders)
                        {
                            <tr>
                                <td>@item.Product.Name</td>
                                <td class="number">@item.Product.SellingPrice</td>
                                <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                <td class="text-muted ">@item.Product.Category.Name</td>
                                <td class="actions"><a href="#" class="icon"></a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="panel panel-default panel-table">
            <div class="panel-heading">

                <div class="title">Last Registered Customers</div>
            </div>
            <div class="panel-body table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th style="width:30%;">User </th>
                            <th style="width:20%;">Phone</th>
                            <th style="width:27%;">Email</th>
                            <th style="width:27%;">Registered Date</th>
                            <th class="actions"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.User)
                        {
                            <tr>
                                <td>@item.FirstName &nbsp; @item.LastName</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Email</td>
                                <td>@item.RegisteredDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

